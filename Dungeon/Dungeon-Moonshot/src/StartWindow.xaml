<!--
    Starts Dungeon: Moonshot. Technically, the player should not see this window.

    Please see Dungeon.Moonshot.StartWindow.xaml.cs for more information.
-->

<Window x:Class="Dungeon.Moonshot.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Dungeon.Moonshot"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Dungeon: Moonshot Start Window"
        Width="200"
        Height="200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid>
        <TextBox x:Name="tbxStartWindowWarning"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 HorizontalContentAlignment="Center"
                 BorderThickness="0"
                 Text="You shouldn't see this screen!" />
    </Grid>
</Window>
